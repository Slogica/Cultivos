<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Spinner para seleccionar el tipo de cultivo -->
    <Spinner
        android:id="@+id/spinnerCultivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:minHeight="48dp"
        android:prompt="@string/select_cultivo" />

    <Button
        android:id="@+id/btnCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Fecha"
        tools:ignore="HardcodedText" />

    <!-- DatePicker para seleccionar la fecha de cultivo -->
    <DatePicker
        android:id="@+id/datePickerCultivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Botón para registrar el cultivo -->
    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Cultivo"
        tools:ignore="HardcodedText" />

    <!-- Botón para ir a la pantalla de lista de cultivos -->
    <Button
        android:id="@+id/btnVerCultivos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Cultivos"
        android:layout_marginTop="16dp"
        tools:ignore="HardcodedText" />
</LinearLayout>